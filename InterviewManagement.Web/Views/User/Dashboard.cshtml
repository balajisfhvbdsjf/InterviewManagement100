@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <h2 class="text-center">Welcome to the Dashboard!</h2>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Users</div>
                <div class="card-body">
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text">View, edit, and manage users.</p>
                    <a href="#" class="btn btn-light">Go to Users</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Reports</div>
                <div class="card-body">
                    <h5 class="card-title">Generate Reports</h5>
                    <p class="card-text">Create reports on user activity.</p>
                    <a href="#" class="btn btn-light">View Reports</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-info mb-3">
                <div class="card-header">Settings</div>
                <div class="card-body">
                    <h5 class="card-title">System Settings</h5>
                    <p class="card-text">Configure system preferences.</p>
                    <a href="#" class="btn btn-light">Go to Settings</a>
                </div>
            </div>
        </div>
    </div>

    <form method="post" asp-action="Logout" class="text-center mt-5">
        <button type="submit" class="btn btn-danger">Logout</button>
    </form>
</div>
